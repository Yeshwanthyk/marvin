{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "../..",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "composite": true,
    "exactOptionalPropertyTypes": false,
    "target": "ES2022",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "jsx": "preserve",
    "jsxImportSource": "@opentui/solid",
    "types": ["node", "bun"],
    "paths": {
      "@adapters/*": ["src/adapters/*"],
      "@runtime/*": ["src/runtime/*"],
      "@domain/*": ["src/domain/*"],
      "@ext/*": ["src/extensibility/*"],
      "@ui/*": ["src/ui/*"],
      "@yeshwanthyk/agent-core": [
        "../../packages/agent/src/index.ts",
        "../agent-core/dist/index.js"
      ],
      "@yeshwanthyk/agent-core/*": [
        "../../packages/agent/src/*",
        "../agent-core/dist/*"
      ],
      "@yeshwanthyk/base-tools": [
        "../../packages/base-tools/src/index.ts",
        "../base-tools/dist/index.js"
      ],
      "@yeshwanthyk/base-tools/*": [
        "../../packages/base-tools/src/*",
        "../base-tools/dist/*"
      ],
      "@yeshwanthyk/lsp": [
        "../../packages/lsp/src/index.ts",
        "../lsp/dist/index.js"
      ],
      "@yeshwanthyk/lsp/*": [
        "../../packages/lsp/src/*",
        "../lsp/dist/*"
      ],
      "@yeshwanthyk/ai": [
        "../../packages/ai/src/index.ts",
        "../ai/dist/index.js"
      ],
      "@yeshwanthyk/ai/src/*": [
        "../../packages/ai/src/*",
        "../ai/dist/*"
      ],
      "@yeshwanthyk/runtime-effect": [
        "../../packages/runtime-effect/src/index.ts",
        "../runtime-effect/dist/index.js"
      ],
      "@yeshwanthyk/runtime-effect/*": [
        "../../packages/runtime-effect/src/*",
        "../runtime-effect/dist/*"
      ],
      "@yeshwanthyk/open-tui": [
        "../../packages/open-tui/src/index.ts",
        "../open-tui/dist/index.js"
      ],
      "@yeshwanthyk/open-tui/*": [
        "../../packages/open-tui/src/*",
        "../open-tui/dist/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../packages/agent/src/**/*.ts",
    "../../packages/ai/src/**/*.ts",
    "../../packages/base-tools/src/**/*.ts",
    "../../packages/lsp/src/**/*.ts",
    "../../packages/runtime-effect/src/**/*.ts",
    "../../packages/open-tui/src/**/*.ts",
    "../../packages/open-tui/src/**/*.tsx",
    "../../packages/open-tui/src/**/*.json",
    "package.json"
  ],
  "exclude": ["dist", "node_modules"]
}
