{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"lib": ["ES2022"],
		"baseUrl": ".",
		"paths": {
			"@marvin-agents/ai": ["../ai/src/index.ts"],
			"@marvin-agents/ai/src/*": ["../ai/src/*"],
			"@marvin-agents/ai/*": ["../ai/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
    "types": ["node"],
    "noEmit": true
  },
	"include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "test"]
}
