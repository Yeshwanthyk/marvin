{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@marvin-agents/agent-core": ["../agent/dist/index.d.ts"],
      "@marvin-agents/agent-core/*": ["../agent/dist/*"],
      "@marvin-agents/ai": ["../ai/dist/index.d.ts"],
      "@marvin-agents/ai/*": ["../ai/dist/*"],
      "@marvin-agents/base-tools": ["../base-tools/dist/index.d.ts"],
      "@marvin-agents/base-tools/*": ["../base-tools/dist/*"],
      "@marvin-agents/lsp": ["../lsp/dist/index.d.ts"],
      "@marvin-agents/lsp/*": ["../lsp/dist/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "tests"]
}
