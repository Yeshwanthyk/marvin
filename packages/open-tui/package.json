{
	"name": "@yeshwanthyk/open-tui",
	"version": "0.1.1",
	"description": "OpenTUI-based Terminal User Interface with SolidJS reactive rendering",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"lint": "biome check --write . && oxlint .",
		"lint:check": "biome check . && oxlint .",
		"typecheck": "tsc --noEmit",
		"build": "tsc -b tsconfig.build.json --force",
		"check": "bun run lint:check && bun run typecheck",
		"test": "bun test",
		"demo": "bun run examples/run.ts",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"files": [
		"dist/**/*",
		"README.md"
	],
	"keywords": [
		"tui",
		"terminal",
		"ui",
		"opentui",
		"solid-js",
		"reactive"
	],
	"author": "Yesh Yendamuri",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Yeshwanthyk/marvin.git",
		"directory": "packages/open-tui"
	},
	"engines": {
		"node": ">=20.0.0",
		"bun": ">=1.2.0"
	},
	"dependencies": {
		"@opentui/core": "0.1.63",
		"@opentui/solid": "0.1.63",
		"fuzzysort": "^3.1.0",
		"opentui-spinner": "^0.0.6",
		"solid-js": "1.9.9"
	},
	"devDependencies": {
		"@babel/core": "^7.28.5",
		"@babel/preset-typescript": "^7.28.5",
		"@types/bun": "latest",
		"@types/node": "^24.0.0",
		"babel-preset-solid": "1.9.9"
	}
}
